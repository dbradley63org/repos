@model IEnumerable<cycles.ef.tmodel>

@{
	ViewBag.Title = "Index";
}

<h2>Models</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>Model</th>
		<th>Make</th>
		<th>Year</th>
		<th>Style</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.model_na)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.tmake.make_na)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.tyear.yr)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.tstyle.style_na)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
				@Html.ActionLink("Details", "Details", new { id = item.id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.id })
			</td>
		</tr>
	}

</table>
